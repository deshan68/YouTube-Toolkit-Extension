{
  "manifest_version": 3,
  "name": "Subtitle Syncer",
  "version": "1.0.7",
  "description": "A web extension that allows users to add and sync .srt subtitle files while watching YouTube videos.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "js": ["assets/content.js"],
      "matches": ["https://*/*"]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": ["https://*/*"],
      "resources": ["assets/*"]
    }
  ]
}
